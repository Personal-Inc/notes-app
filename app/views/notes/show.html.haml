.content-wrapper
  .navbar
    .navbar-inner
      .container
        %a.brand(href="") #{@note[:title]}
        = link_to '<i class="icon-trash" ></i> Delete'.html_safe, 
                note_path(@note_id), 
                :method => "delete",
                :action => "destroy",
                :class => "btn btn-danger pull-right"
        = link_to('<i class="icon-pencil"></i> Edit'.html_safe, 
                edit_note_path(@note_id), 
                :class => 'btn btn-info pull-right')
        %ul.nav.pull-right
          %li.divider-vertical
    -#%small.pull-right.alert.alert-info Last Saved: #{@note[:last_saved]}
  #show-body.note-body
    %input#note_body{:type => 'hidden', :value => @note[:body]}
    -#content
